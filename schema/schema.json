{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Minimal JSON Schema",
    "type": "object",
    "properties": {
        "element": {
            "anyOf": [
                {
                    "$ref": "./semantic-elements.json"
                },
                {
                    "type": "string"
                }
            ]
        },
        "text": {
            "type": "string"
        },
        "style": {
            "type": "string",
            "description": "CSS styles for the element",
            "pattern": "^(\\s*([a-zA-Z-]+)\\s*:\\s*[^;]+\\s*;)*\\s*$"
        },
        "children": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        }
    }
}